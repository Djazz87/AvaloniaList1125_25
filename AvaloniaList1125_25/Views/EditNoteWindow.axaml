<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:AvaloniaList1125_25.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaList1125_25.Views.EditNoteWindow"
        Title="Редактирование книжки"
        x:DataType="viewModels:EditNoteVM"
        DataContext="{StaticResource vm}"
        MinWidth="350"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- экземпляр вьюмоделиs
        привязан выше к DataContext окна -->
        <viewModels:EditNoteVM x:Key="vm" />
    </Window.Resources>
    <StackPanel>
        <TextBlock Text="Фио" />
        <!-- привязки отображают значения вложенного объекта EditNote -->
        <TextBox Text="{Binding Path=EditPerson.Fio}" />
        <TextBlock Text="Номер телефона" />
        <TextBox Text="{Binding Path=EditPerson.Phone}" />
        <TextBlock Text="Адрес" />
        <TextBox Text="{Binding Path=EditPerson.Address}" />
        <TextBlock Text="Дата Рождения" />
        <DatePicker SelectedDate="{Binding Path=EditPerson.DateCreated}" />
        
        
        <!-- Источник записей - вьюмодель, выбранная запись редактирует свойство в EditNote  -->
        <TextBlock Text="Пол" />
        <ComboBox ItemsSource="{Binding Genders}" SelectedItem="{Binding Path=EditPerson.Gender}"
                  HorizontalAlignment="Stretch" />
        <StackPanel Orientation="Horizontal">
            <!-- кнопки привязаны к командам -->
            <Button Content="Удалить" Command="{Binding RemoveCommand}" />
            <Button HorizontalAlignment="Right" Content="Сохранить и закрыть" Command="{Binding Path=CloseCommand}" />
        </StackPanel>
    </StackPanel>
</Window>